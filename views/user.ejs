<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User List - Thyroid Department</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    .main-content {
      margin-left: 250px;
      display: flex;
      justify-content: center;
    }

    .card {
      width: 100%;
      max-width: 1100px;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-4 main-content">
    <div class="card shadow">
      <div class="card-header bg-dark text-white">
        <h4>ðŸ“‹ List of Registered Patients</h4>
      </div>
      <div class="card-body">
        <% if (patients.length === 0) { %>
          <div class="text-center py-5">
            <h5>No patient records found</h5>
            <p class="text-muted">Please add patients to view the list here.</p>
            <a href="/register-patient" class="btn btn-primary">Add Patient</a>
          </div>
        <% } else { %>
          <p class="text-muted mt-3">Showing <%= patients.length %> patient(s)</p>
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead class="table-dark">
                <tr>
                  <th>Serial No</th>
                  <th>Registration No</th>
                  <th>Name</th>
                  <th>Age</th>
                  <th>Sex</th>
                  <th>Contact</th>
                  <th>Address</th>
                  <th>Appointment Date</th>
                  <th>Aadhar No</th>
                  <th>Number of Visits</th>
                  <th>Print</th>
                </tr>
              </thead>
              <tbody>
                <% patients.forEach((record, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= record.registrationNo %></td>
                    <td><%= record.name %></td>
                    <td><%= record.age %></td>
                    <td><%= record.sex %></td>
                    <td><%= record.contact %></td>
                    <td><%= record.address %></td>
                    <td><%= new Date(record.appointmentDate).toLocaleDateString() %></td>
                    <td><%= record.aadharNo %></td>
                    <td><%= record.numberOfVisits %></td>
                    <td>
                      <button class="btn btn-outline-secondary btn-sm" onclick='printCard(<%- JSON.stringify(record) %>)'>Print</button>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Print Script -->
  <script>
    function printCard(patient) {
      const win = window.open('', '_blank');
      win.document.write(`
        <html>
        <head>
          <title>Print Registration Card</title>
          <style>
            body {
              font-family: 'Arial', sans-serif;
              background: pink;
              padding: 20px;
            }
            .card {
              width: 750px;
              margin: auto;
              border: 2px solid black;
              padding: 30px;
              background-color: #fce4ec;
            }
            h2 {
              text-align: center;
              text-transform: uppercase;
              font-weight: bold;
              margin-bottom: 20px;
            }
            .row {
              display: flex;
              margin-bottom: 10px;
            }
            .label {
              width: 200px;
              font-weight: bold;
            }
            .value {
              flex: 1;
              border-bottom: 1px solid #000;
              padding-left: 5px;
            }
            .note {
              font-size: 12px;
              margin-top: 20px;
            }
            .note ol {
              padding-left: 20px;
            }
            .footer {
              display: flex;
              justify-content: space-between;
              margin-top: 30px;
              font-size: 14px;
            }
          </style>
        </head>
        <body onload="window.print(); setTimeout(() => window.close(), 100)">
          <div class="card">
            <h2>INMAS, DRDO - REGISTRATION CARD</h2>
            <div class="row"><div class="label">Registration No:</div><div class="value">${patient.registrationNo}</div></div>
            <div class="row"><div class="label">Date:</div><div class="value">${new Date(patient.appointmentDate).toLocaleDateString()}</div></div>
            <div class="row"><div class="label">Name:</div><div class="value">${patient.name}</div></div>
            <div class="row"><div class="label">Age:</div><div class="value">${patient.age}</div></div>
            <div class="row"><div class="label">Sex:</div><div class="value">${patient.sex}</div></div>
            <div class="row"><div class="label">Contact No:</div><div class="value">${patient.contact}</div></div>
            <div class="row"><div class="label">Address:</div><div class="value">${patient.address}</div></div>
            <div class="row"><div class="label">Aadhar No:</div><div class="value">${patient.aadharNo || '-'}</div></div>
            <div class="row"><div class="label">Patient ID:</div><div class="value">${patient.registrationNo}</div></div>

            <div class="note">
              <p>Note:</p>
              <ol>
                <li>Bring this card at every visit.</li>
                <li>Carry valid ID proof with you.</li>
                <li>Only one attendant is allowed (except for senior citizens).</li>
                <li>Mobile phones are not allowed inside OPD premises.</li>
              </ol>
            </div>

            <div class="footer">
              <div><b>Signature</b> __________________</div>
              <div><b>Office Stamp</b></div>
            </div>
          </div>
        </body>
        </html>
      `);
      win.document.close();
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
