<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Dashboard Stats - Thyroid Department</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    body {
      background-color: #ffffff;
      color: #000000;
    }
    .card {
      background-color: #f8f9fa;
      color: #000000;
      margin-left: 120px;
    }
    .card-header {
      background-color: #000000;
      color: #fffdfd;
    }
    .list-group-item {
      background-color: #ffffff;
      color: #000000;
    }
    .text-white {
      color: #000 !important;
    }
    h2.text-white {
        background-color: #000;
      color: #f4eded !important;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-lg-10">

        <div class="row">
          <div class="col-12 text-center">
            <h2 class="mb-4 text-white">ðŸ“Š Department Statistics</h2>
          </div>
        </div>

        <!-- Summary Cards -->
        <div class="row g-4 mb-4 text-center">
          <div class="col-md-3">
            <div class="card border border-dark">
              <div class="card-body">
                <h4><%= stats.totalPatients %></h4>
                <p class="mb-0">Total Patients</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card border-success">
              <div class="card-body text-success">
                <h4><%= stats.normalThyroid %></h4>
                <p class="mb-0">Normal Thyroid</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card border-warning">
              <div class="card-body text-warning">
                <h4><%= stats.hypothyroid %></h4>
                <p class="mb-0">Hypothyroid</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card border-danger">
              <div class="card-body text-danger">
                <h4><%= stats.hyperthyroid %></h4>
                <p class="mb-0">Hyperthyroid</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Appointments & Age Distribution -->
        <div class="row">
          <!-- Recent Appointments -->
          <div class="col-md-6 mb-4">
            <div class="card">
              <div class="card-header">Recent Appointments</div>
              <div class="card-body">
                <% if (recentAppointments.length > 0) { %>
                  <div class="list-group list-group-flush">
                    <% recentAppointments.forEach(appointment => { %>
                      <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                          <h6 class="mb-1"><%= appointment.name %></h6>
                          <small><%= new Date(appointment.appointmentDate).toLocaleDateString() %></small>
                        </div>
                        <span class="badge bg-primary rounded-pill"><%= appointment.age %> yrs</span>
                      </div>
                    <% }) %>
                  </div>
                <% } else { %>
                  <p class="text-muted">No recent appointments</p>
                <% } %>
              </div>
            </div>
          </div>

          <!-- Age & Pie Chart -->
          <div class="col-md-6">
            <div class="row">
              <div class="col-12 mb-4">
                <div class="card">
                  <div class="card-header">Age Distribution</div>
                  <div class="card-body text-center">
                    <div class="row">
                      <div class="col-4">
                        <h4 class="text-info"><%= stats.ageGroups.young %></h4>
                        <small>0â€“30 years</small>
                      </div>
                      <div class="col-4">
                        <h4 class="text-warning"><%= stats.ageGroups.middle %></h4>
                        <small>31â€“60 years</small>
                      </div>
                      <div class="col-4">
                        <h4 class="text-danger"><%= stats.ageGroups.senior %></h4>
                        <small>60+ years</small>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-12">
                <div class="card">
                  <div class="card-header text-center">
                    <h5>Hyper vs Hypo Thyroid Distribution</h5>
                  </div>
                  <div class="card-body">
                    <canvas id="thyroidPieChart" width="400" height="200"></canvas>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Monthly Trends -->
        <div class="row mt-4">
          <div class="col-12">
            <div class="card">
              <div class="card-header">Monthly Trends</div>
              <div class="card-body">
                <p>
                  This month: <strong><%= stats.thisMonth %></strong> new patients registered
                </p>
                <p>
                  Last month: <strong><%= stats.lastMonth %></strong> new patients registered
                </p>

                <% if (stats.thisMonth > stats.lastMonth) { %>
                  <div class="alert alert-success">
                    ðŸ“ˆ Patient registrations are up by <%= ((stats.thisMonth - stats.lastMonth) / stats.lastMonth * 100).toFixed(1) %>% this month!
                  </div>
                <% } else if (stats.thisMonth < stats.lastMonth) { %>
                  <div class="alert alert-warning">
                    ðŸ“‰ Patient registrations are down by <%= ((stats.lastMonth - stats.thisMonth) / stats.lastMonth * 100).toFixed(1) %>% this month.
                  </div>
                <% } else { %>
                  <div class="alert alert-info">
                    ðŸ“Š Patient registrations are steady this month.
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>


  <!-- JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="/js/chart-init.js"></script>

 
</body>
</html>
